<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all flex flex-col h-full">
    <!-- Container da imagem com proporção fixa e zoom no hover -->
    <div class="relative pt-[75%] overflow-hidden"> <!-- Proporção 4:3 -->
        <img 
            src="@Image" 
            class="absolute top-0 left-0 w-full h-full object-cover 
                   transition-transform duration-300 hover:scale-110"
            alt="@Title"
            loading="lazy"
        />
    </div>
    
    <!-- Conteúdo do card com altura fixa -->
    <div class="p-4 flex flex-col flex-grow">
        <h3 class="font-bold text-lg line-clamp-2 min-h-[3.5rem]">@Title</h3>
        <p class="text-gray-600 mt-1">@Price</p>
        <button class="mt-auto w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition-colors">
            Comprar
        </button>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = default!;

    [Parameter]
    public string Price { get; set; } = default!;

    [Parameter]
    public string Image { get; set; } = default!;
}